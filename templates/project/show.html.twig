{% extends 'base.html.twig' %}


{% block title %}Projet
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="mb-3 mt-5 text-center">
			{{project.title}}
		</h1>

		<table class="table table-hover">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ project.id }}</td>
				</tr>
				<tr>
					<th>Titre</th>
					<td>{{ project.title }}</td>
				</tr>
				<tr>
					<th>Client</th>
					<td>
						{% for c in project.customer %}
							<span>
								{{c.firstName}}
								{{c.lastName}}
							</span>
						{% endfor %}
					</td>
				</tr>
				<tr>
					<th>Resum√©</th>
					<td>{{ project.shortDescription }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ project.description }}</td>
				</tr>
				<tr>
					<th>Date de creation</th>
					<td>{{ project.createdAt ? project.createdAt|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
				<tr>
					<th>Fin prevu</th>
					<td>{{ project.deadline ? project.deadline|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
				<tr>
					<th>Adversarair</th>
					<td>{{ project.adversary }}</td>
				</tr>
				<tr>
					<th>Categorie</th>
					<td>{{ project.category }}</td>
				</tr>
				<tr>
					<th>Etapes</th>
					<td>{{ project.stages ? project.stages|json_encode : '' }}</td>
				</tr>
				<tr>
					<th>Etape</th>
					<td>{{ project.status }}</td>
				</tr>
			</tbody>
		</table>

		<div class="row">
			<div class="col">
				<h6>Taches</h6>
				<ul class="list-group">
					{% for t in project.tasks %}
						<li class="list-group-item">
							<a href="{{ path('task_show', {'id': t.id}) }}">
								{{t.title}}
							</a>
						</li>
					{% endfor %}
				</ul>


			</div>

			<div class="col">
				<h6>Evennements</h6>
				<ul class="list-group">
					{% for e in project.events %}
						<li class="list-group-item">
							<a href="{{ path('event_show', {'id': e.id}) }}">
								{{e.title}}
							</a>
						</li>
					{% endfor %}
				</ul>
			</div>

			<div class="col">
				<h6>Participantions</h6>
				<ul class="list-group">
					{% for p in project.participations %}
						<li class="list-group-item">
							<a href=" {{ path('user_show', {'id': p.user.id}) }}">
								{{p.user.fullName}}
							</a>
							<span>
								({{p.role }})
							</span>
						</li>
					{% endfor %}
				</ul>
			</div>
		</div>
		<hr>

		<div class="row">


			<a class="btn btn-outline-primary" href="{{ path('project_edit', {'id': project.id}) }}">Modifier</a>

			{{ include('project/_delete_form.html.twig') }}
			<a class="btn btn-outline-info" href="{{ path('project_index') }}">Liste de projets</a>
		</div>
	</div>
{% endblock %}
