<form method="post" action="{{ path('customer_delete', {'id': customer.id}) }}" onsubmit="return confirm('Etez vous sur de vouloir supprimer cet element?');">
	<input type="hidden" name="_method" value="DELETE">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ customer.id) }}">
	<button class="btn btn-link">Supprimer</button>
</form>
