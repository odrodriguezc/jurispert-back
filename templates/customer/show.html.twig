{% extends 'base.html.twig' %}

{% block title %}Customer
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="mb-3 mt-5 text-center">Client</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ customer.id }}</td>
				</tr>
				<tr>
					<th>Prenom</th>
					<td>{{ customer.firstName }}</td>
				</tr>
				<tr>
					<th>Nom</th>
					<td>{{ customer.lastName }}</td>
				</tr>
				<tr>
					<th>Email</th>
					<td>{{ customer.email }}</td>
				</tr>
				<tr>
					<th>Adresse</th>
					<td>{{ customer.address }}</td>
				</tr>
				<tr>
					<th>Entreprise</th>
					<td>{{ customer.company }}</td>
				</tr>
			</tbody>
		</table>

		<a class="btn btn-link" href=" {{ path('customer_index') }} ">Liste de clients</a>

		<a class="btn btn-link" href="{{ path('customer_edit', {'id': customer.id}) }}">Modifier</a>

		{{ include('customer/_delete_form.html.twig') }}
	</div>
{% endblock %}
