{% extends 'base.html.twig' %}

{% block title %}Customer index
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="mb-3 mt-5 text-center">Liste de clients</h1>

		<a class="btn btn-link" href="{{ path('customer_new') }}">Ajouter un client</a>
		<table class="table table-hover">
			<thead>
				<tr class="">
					<th>Id</th>
					<th>Prenom</th>
					<th>Nom</th>
					<th>Email</th>
					<th>Adresse</th>
					<th>Entreprise</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for customer in customers %}
					<tr class="">
						<td>{{ customer.id }}</td>
						<td>{{ customer.firstName }}</td>
						<td>{{ customer.lastName }}</td>
						<td>{{ customer.email }}</td>
						<td>{{ customer.address }}</td>
						<td>{{ customer.company }}</td>
						<td>
							<a href="{{ path('customer_show', {'id': customer.id}) }}">show</a>
							<a href="{{ path('customer_edit', {'id': customer.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="7">Pas de registres
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>


	</div>
{% endblock %}
