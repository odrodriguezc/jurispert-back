{% extends 'base.html.twig' %}

{% block stylesheets %}

	<link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css">

{% endblock %}
{% block title %}Customer index
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="mb-3 mt-5 text-center">Liste de clients</h1>

		<a class="btn btn-link" href="{{ path('customer_new') }}">Ajouter un client</a>
		<table id="customersTable" class="table table-hover">
			<thead>
				<tr class="">
					<th>Id</th>
					<th>Prenom</th>
					<th>Nom</th>
					<th>Email</th>
					<th>Adresse</th>
					<th>Entreprise</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for customer in customers|reverse %}
					<tr class="">
						<td>Cus-{{ customer.id }}</td>
						<td>{{ customer.firstName }}</td>
						<td>{{ customer.lastName }}</td>
						<td>{{ customer.email }}</td>
						<td>{{ customer.address }}</td>
						<td>{{ customer.company }}</td>
						<td>
							<a href="{{ path('customer_show', {'id': customer.id}) }}">
								<i class="far fa-eye"></i>
							</a>
							<a href="{{ path('customer_edit', {'id': customer.id}) }}">
								<i class="far fa-edit"></i>
							</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="7">Pas de registres
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>


	</div>
{% endblock %}
{% block javascripts %}

	{{parent()}}

	<script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>


	<script>
		$(document).ready(function () {
$('#customersTable').DataTable({ordering: false});
});
	</script>

{% endblock %}
